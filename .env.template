# UNIZG Career Hub - Production Environment Variables
# Copy this file to .env and update the values for your environment

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_DB=unizg_career_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-here@postgres:5432/unizg_career_hub

# ======================
# CACHE CONFIGURATION
# ======================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# ======================
# APPLICATION SECRETS
# ======================
SECRET_KEY=your-super-secret-flask-key-minimum-32-characters-long
SESSION_SECRET_KEY=your-session-secret-key-different-from-above

# ======================
# EXTERNAL API KEYS
# ======================

# Google OAuth2 (for Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Firebase (for push notifications)
FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-project.firebaseapp.com","projectId":"your-project-id","storageBucket":"your-project.appspot.com","messagingSenderId":"123456789","appId":"your-app-id"}

# AAI@edu.hr (for Croatian academic login)
AAI_CLIENT_ID=your-aai-client-id
AAI_CLIENT_SECRET=your-aai-client-secret

# OpenAI (for chatbot functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ======================
# APPLICATION SETTINGS
# ======================
APP_VERSION=1.0.0
APP_START_TIME=2025-11-07T00:00:00Z

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend API URL
REACT_APP_API_URL=https://api.yourdomain.com

# ======================
# SECURITY SETTINGS
# ======================
SSL_REDIRECT=true

# ======================
# MONITORING & LOGGING
# ======================

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ======================
# DEVELOPMENT OVERRIDES
# ======================
# Uncomment these for development environment

# FLASK_ENV=development
# FLASK_DEBUG=true
# CORS_ORIGINS=http://localhost:3000,http://localhost:80
# REACT_APP_API_URL=http://localhost:5000
# SSL_REDIRECT=false

