# UNIZG Career Hub - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# ============================================
# SECURITY
# ============================================
# Secret key for Flask session encryption
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production
SESSION_SECRET_KEY=${SECRET_KEY}

# ============================================
# DATABASE
# ============================================
# Database connection string
# SQLite (development): sqlite:///app.db
# PostgreSQL (production): postgresql://user:password@host:port/database
# Cloud SQL: postgresql://user:password@/database?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=sqlite:///app.db

# ============================================
# OAUTH2 (Google)
# ============================================
# Get these from Google Cloud Console > APIs & Services > Credentials
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_ACCESS_TOKEN_URL=
OAUTH2_AUTHORIZE_URL=
OAUTH2_API_BASE_URL=

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:5001
# Production: https://your-domain.com
CORS_ORIGINS=*

# ============================================
# FRONTEND
# ============================================
# Frontend URL for redirects after authentication
FRONTEND_URL=http://localhost:5173

# ============================================
# FIREBASE
# ============================================
# Option 1: Path to Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=
# Option 2: Firebase credentials as JSON string (alternative to file path)
# FIREBASE_CREDENTIALS_JSON=
FIREBASE_PROJECT_ID=

# ============================================
# AAI@EduHr Configuration
# ============================================
# Protocol: SAML (recommended), OIDC, or CAS
AAI_PROTOCOL=SAML

# SAML 2.0 Configuration
AAI_ENTITY_ID=https://aai.fer.hr/idp/shibboleth
AAI_LOGIN_URL=https://aai.fer.hr/idp/profile/SAML2/Redirect/SSO
AAI_LOGOUT_URL=https://aai.fer.hr/idp/profile/Logout
AAI_METADATA_URL=https://aai.fer.hr/idp/shibboleth

# Service Provider (SP) Configuration for AAI/SAML
SP_ENTITY_ID=
SP_ACS_URL=
SP_SLS_URL=
SP_X509_CERT=
SP_PRIVATE_KEY=
IDP_X509_CERT=

# OpenID Connect (OIDC) Configuration
AAI_OIDC_CLIENT_ID=
AAI_OIDC_CLIENT_SECRET=
AAI_OIDC_DISCOVERY_URL=https://aai.fer.hr/.well-known/openid-configuration
AAI_OIDC_END_SESSION_URL=https://aai.fer.hr/oidc/end_session

# CAS Configuration
AAI_CAS_SERVER_URL=https://aai.fer.hr/cas
AAI_CAS_VERSION=2
SP_CAS_SERVICE_URL=

# ============================================
# CHATBOT
# ============================================
# Smotra UNIZG Chatbot
SMOTRA_CHATBOT_API_KEY=
SMOTRA_BASE_URL=https://smotra.unizg.hr

# Career Development Office Chatbot
CAREER_OFFICE_CHATBOT_API_KEY=
CAREER_OFFICE_BASE_URL=https://www.unizg.hr

# OpenAI/Generic Chatbot (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=

# ============================================
# EMAIL (for notifications)
# ============================================
# Gmail SMTP Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# ============================================
# FLASK ENVIRONMENT
# ============================================
# Set to 'production' for production deployment
FLASK_ENV=development
FLASK_DEBUG=True
