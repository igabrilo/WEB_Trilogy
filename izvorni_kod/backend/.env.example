# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
FLASK_ENV=development

# OAuth2 Configuration (Google OAuth - Optional)
# Get these from: https://console.cloud.google.com
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_ACCESS_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH2_AUTHORIZE_URL=https://accounts.google.com/o/oauth2/v2/auth
OAUTH2_API_BASE_URL=https://www.googleapis.com/oauth2/v2/

# Firebase Configuration (Optional)
# Download from: https://console.firebase.google.com > Project Settings > Service Accounts
FIREBASE_CREDENTIALS_PATH=
FIREBASE_PROJECT_ID=

# AAI@EduHr Configuration
AAI_ENTITY_ID=https://aai.fer.hr/idp/shibboleth
AAI_LOGIN_URL=https://aai.fer.hr/idp/profile/SAML2/Redirect/SSO
AAI_LOGOUT_URL=https://aai.fer.hr/idp/profile/Logout
AAI_METADATA_URL=https://aai.fer.hr/idp/shibboleth

# Service Provider (SP) Configuration for AAI (Optional - for production SAML)
SP_ENTITY_ID=
SP_ACS_URL=
SP_SLS_URL=

# Session Configuration (optional - uses SECRET_KEY if not set)
SESSION_SECRET_KEY=

# Chatbot Configuration
# Smotra UNIZG Chatbot - Get API key from Smotra UNIZG team
SMOTRA_CHATBOT_API_KEY=
SMOTRA_BASE_URL=https://smotra.unizg.hr

# Career Development Office Chatbot - Get API key from Ured za razvoj karijera
CAREER_OFFICE_CHATBOT_API_KEY=
CAREER_OFFICE_BASE_URL=https://www.unizg.hr

# OpenAI/Generic Chatbot (Optional)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (for future use)
DATABASE_URL=sqlite:///app.db
